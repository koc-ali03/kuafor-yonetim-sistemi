@model KuaforYonetimSistemi.Models.Servis

@{
    ViewData["Title"] = "Servis Sil";
}

<h1 class="text-center text-danger">Servis Sil</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <h3 class="text-center">Bu servisi silmek istediğinizden emin misiniz?</h3>

        <div class="alert alert-warning">
            <h4>Servis Bilgileri</h4>
            <p><strong>Servis Adı:</strong> @Html.DisplayFor(model => model.Isim)</p>
            <p><strong>Süre:</strong> @Html.DisplayFor(model => model.Sure) dk</p>
            <p><strong>Ücret:</strong> @Html.DisplayFor(model => model.Ucret) ₺</p>
            <p><strong>Çalışan:</strong> @Html.DisplayFor(model => model.Calisan.Isim)</p>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="form-group text-center">
                <input type="submit" value="Sil" class="btn btn-danger btn-lg" />
                <a asp-action="Index" class="btn btn-secondary btn-lg">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>
