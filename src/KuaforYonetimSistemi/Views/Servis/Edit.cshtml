@model KuaforYonetimSistemi.Models.Servis

@{
    ViewData["Title"] = "Servis Düzenle";
}

<h1 class="text-center">Servis Düzenle</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Isim" class="control-label font-weight-bold"></label>
                <input asp-for="Isim" class="form-control" placeholder="Servis Adı" />
                <span asp-validation-for="Isim" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sure" class="control-label font-weight-bold"></label>
                <input asp-for="Sure" class="form-control" type="number" placeholder="Süre (Dakika)" />
                <span asp-validation-for="Sure" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ucret" class="control-label font-weight-bold"></label>
                <input asp-for="Ucret" class="form-control" type="number" step="0.01" placeholder="Ücret (₺)" />
                <span asp-validation-for="Ucret" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CalisanId" class="control-label font-weight-bold"></label>
                <select asp-for="CalisanId" class="form-control" asp-items="ViewBag.CalisanId">
                    <option value="">Çalışan Seçiniz</option>
                </select>
                <span asp-validation-for="CalisanId" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-success btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
