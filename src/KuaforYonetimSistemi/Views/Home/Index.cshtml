@model IEnumerable<KuaforYonetimSistemi.Models.Salon>

@{
    ViewData["Title"] = "Ana Sayfa";
}
<link rel="stylesheet" href="~/css/anaSayfa.css" asp-append-version="true" />

<div class="hero-section text-center">
    <div class="container">
        <h1 class="display-4">Randevu Almanın Kolay Yolu</h1>
        <p class="lead">Birden fazla kuaför veya berber salonundan randevu almak artık çok kolay! Hemen başlayın ve istediğiniz hizmeti seçin.</p>
        <a href="~/Views/Salon/Index.cshtml" class="btn btn-primary btn-lg mt-3">Salonlarımızı Keşfedin</a>
    </div>
</div>

<div id="salons" class="salon-section container mt-5">
    <h2 class="text-center mb-4">Kuaför ve Berber Salonlarımız</h2>
    <div class="row">
        @foreach (var salon in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-light">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@salon.Isim</h5>
                        <div class="mb-3">
                            <label class="font-weight-bold">Adres:</label>
                            <p class="card-text">@salon.Adres</p>
                        </div>
                        <div class="mb-3">
                            <label class="font-weight-bold">İletişim:</label>
                            <p class="card-text">@salon.IletisimBilgisi</p>
                        </div>
                        <div class="mb-3">
                            <label class="font-weight-bold">Açılış Saati:</label>
                            <p class="card-text">@salon.AcilisSaati</p>
                        </div>
                        <div class="mb-3">
                            <label class="font-weight-bold">Kapanış Saati:</label>
                            <p class="card-text">@salon.KapanisSaati</p>
                        </div>
                        <a href="../Views/Salon/Index.cshtml" class="btn btn-outline-primary mt-2">Detayları Gör</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Hizmetler ve diğer bölümler aynı şekilde -->
