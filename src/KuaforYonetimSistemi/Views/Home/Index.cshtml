@model IEnumerable<KuaforYonetimSistemi.Models.Salon>

@{
    ViewData["Title"] = "Ana Sayfa";
}
<link rel="stylesheet" href="~/css/anaSayfa.css" asp-append-version="true" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Hero Section with Slider -->
<div id="heroSlider" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/image/bir.jpg" class="d-block w-100" alt="Kuaför randevu alım sistemi">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4">Kolay ve Hızlı Randevu</h1>
                <p class="lead">Kuaför ve berber salonlarımızdan dilediğiniz zaman randevu alın, beklemeden hizmet alın.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/iki.jpg" class="d-block w-100" alt="Modern salonlar">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4">Modern Salonlar</h1>
                <p class="lead">Salonlarımız, konforlu ortamlarıyla sizi bekliyor.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/uc.jpg" class="d-block w-100" alt="Hizmette mükemmellik">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="display-4">Hizmette Mükemmellik</h1>
                <p class="lead">Her zaman en iyi hizmeti sunmak için buradayız.</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#heroSlider" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroSlider" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- Salonlar Section -->
<div id="salons" class="salon-section container mt-5">
    <h2 class="text-center mb-4">Salonlarımız</h2>
    <div class="row">
        @foreach (var salon in Model.Take(3))
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@salon.Isim</h5>
                        <p class="card-text"><strong>İletişim:</strong> @salon.IletisimBilgisi</p>
                        <p class="card-text"><strong>Adres:</strong> @salon.Adres</p>
                        <p class="card-text"><strong>Çalışma Saatleri:</strong> @salon.AcilisSaati - @salon.KapanisSaati</p>
                        <a href="@Url.Action("Index", "Randevu")" class="btn btn-outline-primary">Randevu Al</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Randevu Bilgilendirme Section -->
<div class="reservation-info-section container mt-5">
    <h2 class="text-center mb-4">Randevu Bilgilendirme</h2>
    <div class="accordion" id="reservationAccordion">
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                    Randevuyu Nasıl Oluşturabilirim?
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#reservationAccordion">
                <div class="accordion-body">
                    Randevu almak için kolayca üye olun ve kaliteli kuaförlerimizden hizmet alın.
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingTwo">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    Randevuyu Nasıl İptal Edebilirim?
                </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#reservationAccordion">
                <div class="accordion-body">
                    Randevu detaylarınızdan "İptal Et" seçeneğini kullanarak kolayca iptal edebilirsiniz.
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    Ödeme Seçenekleri Nelerdir?
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#reservationAccordion">
                <div class="accordion-body">
                    Ödemeyi salonumuzda gerçekleştirebilirsiniz.
                </div>
            </div>
        </div>
    </div>
</div>
