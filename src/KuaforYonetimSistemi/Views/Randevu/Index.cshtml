@model IEnumerable<KuaforYonetimSistemi.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<h1 class="text-center">Randevular</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri Adı</th>
            <th>Servis</th>
            <th>Çalışan</th>
            <th>Salon</th>
            <th>Randevu Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.MusteriIsim</td>
                <td>@randevu.Servis.Isim</td>
                <td>@randevu.Calisan.Isim</td>
                <td>@randevu.Salon.Isim</td>
                <td>@randevu.RandevuTarihi.ToString("g")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@randevu.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@randevu.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
