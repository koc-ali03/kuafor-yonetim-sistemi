@model KuaforYonetimSistemi.Models.Calisan

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/Calisan.css" asp-append-version="true" />

<h1 class="mb-4">Çalışan Oluştur</h1>

<h4>Çalışan Bilgileri</h4>

<hr />

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Isim" class="control-label">Çalışan İsmi</label>
                <input asp-for="Isim" class="form-control" placeholder="Çalışan ismini girin" />
                <span asp-validation-for="Isim" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="UzmanlikAlani" class="control-label">Uzmanlık Alanı</label>
                <input asp-for="UzmanlikAlani" class="form-control" placeholder="Uzmanlık alanını girin" />
                <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SalonId" class="control-label">Salon Seçin</label>
                <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
                <span asp-validation-for="SalonId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
