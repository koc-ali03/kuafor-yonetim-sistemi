<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KuaforYonetimSistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KuaforYonetimSistemi.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="logo">
            <img src="~/image/logo.png" alt="SMBarber Logo" />
            <h1>SMBarber</h1>
        </div>
        <nav>
            <ul>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Salon" ? "active" : "")"
                       asp-controller="Salon" asp-action="Index">Salon</a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Calisan" ? "active" : "")"
                       asp-controller="Calisan" asp-action="Index">Çalışan</a>
                </li>
                <li>
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Servis" ? "active" : "")"
                       asp-controller="Servis" asp-action="Index">Servis</a>
                </li>
            </ul>
            <partial name="_LoginPartial" />
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            &copy; 2024 - KuaforYonetimSistemi - 
            <a asp-controller="Home" asp-action="Privacy">Gizlilik Politikası</a>
        </div>
    </footer>
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
